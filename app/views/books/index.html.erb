<div class="content">
  <table class="table">
    <thead>
      <tr>
        <th>书名</th>
        <th>作者</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% for book in @books %>
        <tr sid="<%= book.id %>">
          <td><%= h book.name %></td>
          <td><%= h book.author %></td>
          <td>
            <a href='#' class='download'>下载</a>
            <a href='#' class='delete'>删除</a>
            <a href='#' class='share'><%= book.share? ? "取消共享" : "共享" %></a>
          </td>
        </tr>
      <% end %>
      <tr>
        <td colspan="3"><%= will_paginate @books %></td>
      </tr>
    </tbody>
  </table>
</div>
